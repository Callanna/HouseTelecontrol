<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_main_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_actvity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/mainlayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="300dp">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.github.callanna.housetelecontrol.view.CeramicImageView
                        android:id="@+id/block_recommand"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="80dp"
                        android:src="@mipmap/ic_recommand"
                        android:scaleType="matrix"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@color/orange"
                        />
                    <TextView
                        android:id="@+id/txt_recommand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:layout_marginTop="180dp"
                        android:layout_marginLeft="40dp"
                        android:text="推荐"/>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.github.callanna.housetelecontrol.view.CeramicImageView
                            android:id="@+id/block_movie"
                            android:layout_width="400dp"
                            android:layout_height="150dp"
                            android:paddingLeft="100dp"
                            android:scaleType="matrix"
                            android:src="@mipmap/ic_movie"
                            android:layout_margin="2dp"
                            android:background="@color/red_dark"
                            />
                        <TextView
                            android:id="@+id/txt_movie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40sp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="50dp"
                            android:text="影视"/>
                    </RelativeLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.github.callanna.housetelecontrol.view.CeramicImageView
                                android:id="@+id/block_music"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:scaleType="matrix"
                                android:src="@mipmap/ic_music"
                                android:layout_margin="2dp"
                                android:background="@color/accent"
                                />
                            <TextView
                                android:id="@+id/txt_music"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="40sp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="80dp"
                                android:text="音乐"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <com.github.callanna.housetelecontrol.view.CeramicImageView
                                android:id="@+id/block_entertainment"
                                android:layout_width="200dp"
                                android:layout_height="150dp"
                                android:scaleType="matrix"
                                android:src="@mipmap/ic_entertainment"
                                android:layout_margin="2dp"
                                android:background="@color/accent"
                                />
                            <TextView
                                android:id="@+id/txt_entertainment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="40sp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="80dp"
                                android:text="娱乐"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="150dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.github.callanna.housetelecontrol.view.CeramicImageView
                        android:id="@+id/block_radio"
                        android:layout_width="400dp"
                        android:layout_height="150dp"
                        android:paddingLeft="50dp"
                        android:src="@mipmap/ic_radionew"
                        android:scaleType="matrix"
                        android:layout_margin="2dp"
                        android:background="@color/pink"
                        />
                    <TextView
                        android:id="@+id/txt_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:textColor="@color/blue_gray"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="50dp"
                        android:text="电台"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.github.callanna.housetelecontrol.view.CeramicImageView
                        android:id="@+id/block_icould"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:scaleType="matrix"
                        android:layout_margin="2dp"
                        android:src="@mipmap/ic_icouldpan"
                        android:background="@color/purple"
                        />
                    <TextView
                        android:id="@+id/txt_icloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="80dp"
                        android:text="云盘"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
